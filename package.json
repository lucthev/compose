{
  "name": "compose",
  "version": "0.0.1",
  "description": "Yet another contentEditable thing.",
  "main": "src/compose.js",
  "scripts": {
    "prebuild": "mkdir -p dist",
    "build": "browserify -p bundle-collapser/plugin -s Compose src/compose.js | uglifyjs -m > dist/compose.js",
    "predebug": "mkdir -p dist",
    "debug": "browserify -s Compose src/compose.js > dist/compose.js",
    "lint": "jshint src || exit 0",
    "dev": "watchify -v -s Compose -o dist/compose.js src/compose.js",
    "unit-test": "karma start test/unit/karma.conf.js",
    "preintegration": "test -f vendor/selenium-2.43.1.jar || curl --create-dirs -o vendor/selenium-2.43.1.jar http://selenium-release.storage.googleapis.com/2.43/selenium-server-standalone-2.43.1.jar",
    "integration": "mocha -t 120000 test/functional/*.spec.js",
    "test": "npm run lint && npm run build && npm run unit-test && npm run integration",
    "clean": "rm -rf dist vendor"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/lucthev/compose"
  },
  "author": "Luc Thevenard <lucthevenard@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucthev/compose/issues"
  },
  "homepage": "https://github.com/lucthev/compose",
  "devDependencies": {
    "browserify": "~6.2.0",
    "bundle-collapser": "^1.1.0",
    "chai": "^1.9.1",
    "jshint": "~2.5.10",
    "karma": "^0.12.17",
    "karma-chai": "^0.1.0",
    "karma-cli": "0.0.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-mocha": "^0.1.4",
    "karma-sauce-launcher": "^0.2.9",
    "mocha": "^1.21.4",
    "selenium-webdriver": "~2.44.0",
    "st": "^0.5.1",
    "uglify-js": "~2.4.15",
    "watchify": "~2.1.1"
  },
  "dependencies": {
    "choice": "~1.1.0",
    "collapse-whitespace": "~1.0.4",
    "component-emitter": "1.1.3",
    "debug": "^2.0.0",
    "has-own-prop": "^1.0.0",
    "serialize-elem": "2.1.3",
    "setimmediate": "^1.0.2"
  }
}
